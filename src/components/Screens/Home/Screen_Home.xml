<?xml version="1.0" encoding="utf-8" ?>

<component name="Screen_Home" extends="CoreScreen">
  <script type="text/brightscript" uri="Screen_Home.brs" />

  <interface>
    <field id="exitApp" type="boolean" value="false" />
    <field id="rowContent" type="node" onChange="createRows" />
  </interface>

  <children>
    <RowList
      id = "exampleRowList"
      translation = "[ 100, 100 ]"
      itemComponentName = "RowListItem"
      numRows = "3"
      itemSize = "[ 1920, 400 ]"
      rowItemSize = "[ [300, 200] ]"
      itemSpacing = "[ 0, 0 ]"
      showRowLabel = "[ true ]"
      drawFocusFeedback = "false"
      vertFocusAnimationStyle = "fixedFocusWrap"
      rowFocusAnimationStyle = "fixedFocusWrap" />
  </children>
</component>
<?xml version="1.0" encoding="utf-8" ?>

<component name="ScreenHome" extends="CoreScreen">
  <script type="text/brightscript" uri="ScreenHome.brs" />

  <interface>
    <field id="exitApp" type="boolean" value="false" />
    <field id="rowContent" type="array" onChange="createRows" />
  </interface>

  <children>
    <HeroBanner
      id = "heroBanner"
    />
    <Poster
      id = "heroLoadingOverlay"
      translation = "[ 0,0 ]"
      height = "540"
      width = "1920"
      visible = "true"
      uri = "pkg:/assets/images/heroLoadingOverlay.png"
    />
    <Poster
      id = "backgroundPoster"
      translation = "[ 0, 540 ]"
      uri = "pkg:/assets/images/rowBackground.png"
      opacity = "0.3"
    />
    <RowList
      id = "exampleRowList"
      translation = "[ 100, 560 ]"
      itemComponentName = "RowListItem"
      numRows = "4"
      itemSize = "[ 1920, 400 ]"
      rowItemSize = "[ [200, 300] ]"
      itemSpacing = "[ 0, 0 ]"
      rowItemSpacing = "[ [ 20, 0 ] ]"
      showRowLabel = "[ true ]"
      rowLabelOffset = "[ [ 0, 20 ] ]"
      drawFocusFeedback = "true"
      vertFocusAnimationStyle = "fixedFocusWrap"
      rowFocusAnimationStyle = "floatingFocus"
    />
    <Sidebar
      id = "sideBar"
      translation="[-200, 0]"
    />
    <Animation
      id="sideBarAnim"
      duration="0.5"
      repeat="false"
      easeFunction="linear">
      <Vector2DFieldInterpolator
        id="sideBarSlideAnim"
        fieldToInterp="sideBar.translation"
        key="[0.0, 1.0]"
        keyValue="[ [-200, 0], [0, 0] ]"
      />
    </Animation>
  </children>
</component>
<?xml version="1.0" encoding="utf-8" ?>

<component name="ContentDetailsScreen" extends="CoreScreen">
  <script type="text/brightscript" uri="ContentDetailsScreen.brs" />

  <interface>
    <field id="showScreen" type="boolean" value="false" onChange="showScreen" />
  </interface>

  <children>
    <Poster
      id = "backgroundPoster"
    />
    <Sidebar
      id="sideBar"
      translation="[-200, 0]"
    />
    <Animation
      id="sideBarAnim"
      duration="0.5"
      repeat="false"
      easeFunction="linear">
      <Vector2DFieldInterpolator
        id="sideBarSlideAnim"
        fieldToInterp="sideBar.translation"
        key="[0.0, 1.0]"
        keyValue="[ [-200, 0], [0, 0] ]"
      />
    </Animation>
  </children>
</component>
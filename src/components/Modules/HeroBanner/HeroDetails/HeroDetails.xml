<?xml version="1.0" encoding="utf-8" ?>

<component name="HeroDetails" extends="LayoutGroup">
  <script type="text/brightscript" uri="HeroDetails.brs" />
  <interface>
    <field id="heroDetailsContent" type="AssocArray" onChange="updateHeroDetails" />
    <field id="logoReady" type="boolean" value="false" />
  </interface>
  <children>
    <Poster
      id="spacer"
      uri="pkg:/assets/images/blackbackground.png"
      width="960"
      height="10"
    />
    <Poster
      id="movieLogo"
      uri="https://image.tmdb.org/t/p/w500/xjzbSDGtnxnr2E1eXWTEcmVbuZR.png"
      height="200"
    />
    <Label
      id="descriptionLabel"
      text = "Description"
      wrap = "true"
      width="800"
      maxLines = "5"
    />
  </children>
</component>